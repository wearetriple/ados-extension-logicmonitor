{
  "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
  "id": "701034b0-7b0a-4ad0-a1f0-51ff02da3407",
  "name": "logicmonitor-sdt",
  "friendlyName": "Manage Logicmonitor SDT",
  "description": "This task allows you to manage Scheduled Downtimes in Logicmonitor",
  "helpMarkDown": "",
  "category": "Utility",
  "author": "Triple B.V.",
  "visibility": ["Build", "Release"],
  "runsOn": ["Agent", "DeploymentGroup"],
  "version": {
    "Major": 0,
    "Minor": 1,
    "Patch": 13
  },
  "instanceNameFormat": "$(Action) PRTG Sensor $(PRTGSensorId)",
  "inputs": [
    {
      "name": "accountName",
      "type": "string",
      "label": "Account Name",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Logicmonitor Account Name"
    },
    {
      "name": "credentialType",
      "type": "pickList",
      "label": "Credentials Type",
      "defaultValue": "LMVv1",
      "required": true,
      "options": {
        "LMVv1": "LMVv1",
        "Bearer": "Bearer"
      }
    },
    {
      "name": "sensorID",
      "type": "int",
      "label": "Sensor ID",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "The ID of the specific resource you wish to pause or resume"
    },
    {
      "name": "accessId",
      "type": "string",
      "label": "Access ID",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "API Token Access ID",
      "visibleRule": "credentialType == LMVv1"
    },
    {
      "name": "accessKey",
      "type": "string",
      "label": "Access Key",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "API Token Access Key",
      "visibleRule": "credentialType == LMVv1"
    },
    {
      "name": "bearerToken",
      "type": "string",
      "label": "Bearer Token",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "API Token Bearer Token",
      "visibleRule": "credentialType == Bearer"
    },
    {
      "name": "action",
      "label": "Action",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Action",
      "type": "pickList",
      "options": {
        "Pause": "Pause",
        "Resume": "Resume"
      }
    },
    {
      "name": "duration",
      "type": "int",
      "label": "Duration of SDT (in minutes)",
      "defaultValue": "5",
      "required": false,
      "helpMarkDown": "Duration of SDT (in minutes)",
      "visibleRule": "action == Pause"
    },
    {
      "name": "sdtType",
      "type": "pickList",
      "label": "SDT Type",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "SDT type",
      "options": {
        "ResourceGroupSDT": "ResourceGroupSDT",
        "ResourceSDT": "ResourceSDT",
        "WebsiteGroupSDT": "WebsiteGroupSDT",
        "WebsiteSDT": "WebsiteSDT"
      },
      "visibleRule": "action == Pause"
    }
  ],
  "execution": {
    "Node16": {
      "target": "index.js"
    }
  },
  "outputVariables": [
    { 
      "description": "The ID of the created SDT('s)", 
      "name": "sdtId" 
    }
  ]
}
